<p id="notice"><%= notice %></p>

<p>
  <strong>Mac address:</strong>
  <%= @device.mac_address %>
  <%= @device.try(:product).try(:name) %>
</p>

<p>
  <strong>Names:</strong>
  <%= @device.name.join(', ') %>
</p>

<%= @device.product.try(:name) %>
<%= @device.product.try(:manufacturer).try(:name) %>

<p>
  <strong>Ipv4:</strong>
  <%= @device.ipv4.map(&:to_s).join(', ') %>
</p>

<p>
  <strong>Ipv6:</strong>
  <%= @device.ipv6 %>
</p>

<p>
  <strong>Kind:</strong>
  <%= @device.kind %>
</p>

<p>
  <strong>Last seen:</strong>
  <%=distance_of_time_in_words(@device.last_seen, Time.now, include_seconds: true) %>
</p>

<p>
  <strong>Extra:</strong>
  <%= @device.extra %>
</p>

<p>
  <strong>Open ports:</strong>
  <strong>TCPv4:</strong>
  <%= @device.tcpv4.join(', ') %>
  </p>

  <h2>Flows</h2>
<p>
  <ul>
    <% Flow.where(device: @device).each do |flow| %>
    <li>
      <%       begin
          src_port = Socket.getservbyport(flow.src_port)
        rescue
          src_port = flow.src_port.to_s
        end

        begin
          dst_port = Socket.getservbyport(flow.dst_port)
        rescue
          dst_port = flow.dst_port.to_s
               end
	       %>

      <%= flow.src_ip %>:<%= src_port %> -> <%= flow.dst_ip %>:<%=dst_port %><br/> <%= flow.bytes_sent %> bytes in <%= flow.duration %> seconds
    </li>
    <% end %>
  </ul>
</p>
<%
  (bins, freq) = Flow.where(device: @device).pluck(:bytes_sent).histogram([0, 10, 100, 1000, 10000, 100000, 1000000])
  data = Hash[bins.zip(freq)]
  %>
<%= column_chart data %>

<% if false %>
<pre>
  <%= results =  @device.scan_diff.where("extra ? 'active'").inject({}) { |hash, sd| hash.merge({ sd.created_at => sd.extra["active"] }) } ;
  new_results = results.clone
  results.each { |key, value| new_results[key - 0.01] = !value }
  JSON.pretty_generate(results)
  JSON.pretty_generate(new_results) %>
</pre>

<%= results =  @device.scan_diff.where("extra ? 'active'").inject({}) { |hash, sd| hash.merge({ sd.created_at => sd.extra["active"] }) } ;
  new_results = results.clone
  results.each { |key, value| new_results[key - 0.01] = !value } %>
<%= column_chart(  @device.scan_diff.where("extra ? 'active'").inject({}) { |hash, sd| hash.merge( { sd.created_at => sd.extra["active"] ? 1 : 0  })}, discrete: true ) %>
<% end %>

