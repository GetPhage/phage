[Unit]
Description=Puma HTTP Server
After=network.target

[Service]
Type=simple
User={{ puma_user }}
WorkingDirectory={{ puma_root }}
EnvironmentFile={{ shared }}/.env
PIDFile={{ shared }}/tmp/pids/app.pid
ExecStart={{ puma_init }} start
ExecReload={{ puma_init }} restart
ExecStop={{ puma_init }} stop

[Install]
WantedBy=multi-user.target
